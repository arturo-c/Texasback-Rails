<div id="breadcrumbs">
	<%= link_to 'Home', admin_path %> &gt; <%= link_to 'Diagnostics', diagnostics_path %> &gt; Introduction
</div>

<p>
	This content can be found at 
	<strong><%= link_to "http://texasback.com/conditions", conditions_list_path %></strong>
	and
	<strong><%= link_to "http://texasback.com/treatments", treatments_list_path %></strong>.
</p>

<%= show_errors_for :version %>

<% form_for @version, :url => update_content_diagnostics_path, :method => :put do |f| %>
	<dl class="form">
		<dt><%= f.label :body_content, 'Body Content' %></dt>
		<dd><%= f.rich_text :body_content %></dd>
	</dl>
	
	<%= render :partial => 'admin/utility/publish_controls', :locals => { 
															:enable_publish => (@version.modified? && @version.errors.length == 0), 
															:form => f,
															:show_revert => true } %>
<% end %>