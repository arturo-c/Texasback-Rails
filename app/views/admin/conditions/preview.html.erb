<%= render :partial => 'admin/utility/preview_bar', :locals => { 
																		:preview_path => "Condition: #{h(@condition.name)}",
																		:button_link => edit_condition_path(params[:id]) } %>

<% content_for :head do %>
	<script src="/_js/conditions.js" type="text/javascript" charset="utf-8"></script>
	<script src="/_js/jquery.fancybox.js" type="text/javascript" charset="utf-8"></script>
	<script src="/_js/jquery.pngFix.pack.js" type="text/javascript" charset="utf-8"></script>
<% end %>

<% content_for :secondary do %>
	<h3>Specific Conditions</h3>

	<ul>
	<% Condition.all.each do |condition| %>
		<% if condition == @condition %>
			<li><%= h condition.name %></li>
		<% elsif condition.has_published? %>
			<li><%= link_to h(condition.name), view_condition_path(condition.slug) %></li>
		<% end %>		
	<% end %>
	</ul>
<% end %>

<%= render :partial => 'conditions/condition' %>