<% form_for @image, :html => { :multipart => true } do |f| %>
	<dl class="form">
		<dt><%= f.label :uploaded_data, "Upload a new image" %></dt>
		<dd><%= f.file_field :uploaded_data %></dd>
		
		<dt><%= f.label :caption, 'Caption' %> (shown for users without images enabled)</dt>
		<dd><%= f.text_field :caption, :size => 60, :maxlength => 250 %></dd>
	</dl>

	<p>
		<%= f.submit 'Upload' %>
		
		<% unless @image.new_record? %>		
			or <%= link_to "Cancel", event_images_path(@event) %>
		<% end %>
	</p>
<% end %>