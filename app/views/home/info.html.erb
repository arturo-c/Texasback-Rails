<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
		"http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">

<html xmlns="http://www.w3.org/1999/xhtml">
	<head>
		<title>Texas Back Application Info</title>
		<style type="text/css">
		body {
			background: #D2D2D2;
			font: 16px Helvetica, Arial, sans-serif;
		}
		
		div#wrapper {
			width: 100%;
		}
		
		div#details {
			width: 400px;
			margin: 0 auto;
			margin-top: 50px;
			background: #fff;
			border: 3px solid #787878;
			padding: 20px;
			padding-bottom: 0;
		}
		
		dl {
			margin: 0;
			padding: 0;
		}
		
		dl dt {
			font-weight: bold;
		}
		
		dl dd {
			margin-left: 0;
			margin-bottom: 20px;
			color: #666;
		}
		</style>
	</head>
	<body>
		<div id="wrapper">
			<div id="details">
				<dl>
					<dt>Ruby Version</dt>
					<dd><%= RUBY_VERSION %> (<%= RUBY_PLATFORM %>)</dd>
					
					<dt>Rails Version</dt>
					<dd><%= Rails::VERSION::STRING %></dd>
					
					<dt>Application Root</dt>
					<dd><%= File.expand_path(RAILS_ROOT) %></dd>
					
					<dt>Environment</dt>
					<dd><%= RAILS_ENV %></dd>
					
					<dt>Migration</dt>
					<dd><%= ActiveRecord::Migrator.current_version %></dd>					
				</dl>
			</div>
		</div>
	</body>
</html>
